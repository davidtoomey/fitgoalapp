<div class="row">
  <div class="col-sm-6">
    <h1 class="greenheaders">Sign up</h1>

    <%= form_for(resource, :as => resource_name,
    :url => registration_path(resource_name),
    :html => { :role => "form" }) do |f| %>

    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :username %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :username, :autofocus => true, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-6">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :"Starting Weight" %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :starting_weight, class: "form-control" %>
        </div>
      </div>
    </div>
        <div class="form-group">
      <div class="row">
        <div class="col-sm-6">
          <%= f.label :"Target Weight" %>
          <%= f.text_field :target_weight, class: "form-control" %>
        </div>
      </div>
    </div>
        <div class="form-group">
      <div class="row">
        <div class="col-sm-6">
          <%= f.label :"Height"%>
          <%= f.text_field :height, class: "form-control" %>
        </div>
      </div>
    </div>
        <div class="form-group">
      <div class="row">
        <div class="col-sm-6">
          <%= f.label :Age %>
          <%= f.text_field :age, class: "form-control" %>
        </div>
      </div>
    </div>
        <div class="form-group">
      <div class="row">
        <div class="col-sm-6">
          <%= f.label :Sex %>
          <%= f.text_field :sex, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    </div>
    <% end %>


    <%= render "devise/shared/links" %>

  </div>
</div>
